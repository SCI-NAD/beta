---
import { Image } from 'astro:assets';
import logoImage from '/public/logo.svg';
---

<div class="logo-container">
    <Image 
        src={logoImage} 
        alt="SCI-NAD Logo" 
        class="logo-image" 
        width={100} 
        height={100} 
        format="webp" 
        quality={100}
        loading="eager"
    />
    <p class="logo-text">SCI-NAD</p>
</div>

<style>
    .logo-container {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-image {
        width: 50px;
        height: 50px;
        object-fit: contain;
    }

    .logo-text {
        font-family: var(--theme-font-family-serif);
        font-size: var(--font-size-md);
        color: inherit;
        text-decoration: none;
        margin: 0;
        cursor: default;
    }

    .logo-text:hover {
        text-decoration: underline;
        cursor: pointer;
    }
</style>
