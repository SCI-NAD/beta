---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Join the Waitlist | SCI-NAD',
	description: 'Sign up for the SCI-NAD waitlist to stay ahead in neuroscience research and development.',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Get in Touch</h1>
				<p>
					Join the SCI-NAD community and stay at the forefront of neuroscience innovation. Subscribe to our waitlist for exclusive early access to new features, insights into cutting-edge research, and regular updates from our team of neurotechnology experts.
				</p>
				<div>
					<p>
						Questions or feedback? We're here to help:
						<em><a href="mailto:support@sci-nad.org">support@sci-nad.org</a></em>
					</p>
				</div>
			</div>
			<div class="col-2__container">
				<ContactForm />
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
	}
</style>
