---
import { Icon } from 'astro-icon/components';
import {
    AnnouncementBar,
    Button,
    CustomerQuoteSection,
    ThreeColumnTextSection,
    YouTubeEmbedSection,
    StickyTextImageSection,
    CtaCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
    title: 'Neural Playground | SCI-NAD',
    description: 'Engage directly with interactive neural simulations to explore complex brain functions easily.',
};

---

<AnnouncementBar
    text="Step Into the Neural Playground and Experience Interactive Neuroscience"
    href="/features/neural-playground"
    slot="announcement-bar"
/>
<Layout {seo}>
    <TextAndImageHero reversed>
        <div slot="text-container">
            <h1>Neural Playground</h1>
            <p>Demystify neuroscience through direct interaction with our real-time 3D neural simulations.</p>
        </div>
        <div slot="btns-container">
            <Button href="/features/neural-playground" customIcon
                >Explore Now <Fragment slot="icon">
                    <Icon name="ic:baseline-chevron-right" />
                </Fragment></Button
            >
        </div>
        <picture slot="image-container">
            <img
                src="/assets/images/b.jpg"
                alt="Interactive Neural Simulation"
                id="home-hero-image"
            />
        </picture>
    </TextAndImageHero>

    <CustomerQuoteSection
        quoteText="SCI-NADâ€™s interactive simulations provide a revolutionary approach to learning and understanding brain functions without prior deep neuroscience knowledge."
        customerName="Dr. Alice Huxley, Neuroscientist"
    />

    <ThreeColumnTextSection>
        <div slot="column-1-body">
            <h2>Interactive Learning</h2>
            <p>Manipulate and observe neural interactions in real-time, making complex concepts approachable and understandable.</p>
        </div>
        <Button slot="column-1-cta" outlined>Learn More</Button>
        <div slot="column-2-body">
            <h2>Accessible Models</h2>
            <p>Our models are designed for intuitive exploration, lowering the barrier to entry for educators and enthusiasts alike.</p>
        </div>
        <Button slot="column-2-cta" outlined>Learn More</Button>
        <div slot="column-3-body">
            <h2>Advanced Applications</h2>
            <p>Apply these simulations in educational settings, research, and beyond to unlock new understanding and potential.</p>
        </div>
        <Button slot="column-3-cta" outlined>Learn More</Button>
    </ThreeColumnTextSection>

    

    <StickyTextImageSection>
        <div slot="text-container">
            <h2>Explore Real-World Scenarios</h2>
            <p>
                Delve into scenarios from clinical neurology to cognitive science, enhancing your comprehension and capabilities.
            </p>
        </div>
        <picture slot="image-container">
            <img
                src="/assets/images/features/detailed-neural-model.jpg"
                alt="Detailed Neural Model"
                loading="lazy"
            />
        </picture>
    </StickyTextImageSection>

    <CtaCardSection
        background="var(--theme-surface-2)"
        color="var(--theme-on-surface-2)"
    >
        <h2>Join Our Community of Innovators</h2>
        <p>
            Become part of a growing community that's reshaping how we view and interact with the brain.
        </p>
        <Button href="/community/join" customIcon
            >Join Now<Fragment slot="icon">
                <Icon name="ic:baseline-chevron-right" />
            </Fragment></Button
        >
    </CtaCardSection>
</Layout>
