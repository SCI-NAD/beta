---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import {
    Button,
    Container,
    TextCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
    title: 'Interactive Neural Simulator | SCI-NAD',
    description: 'Explore and interact with 3D brain models while simulating neural activity in real-time.',
};
---

<Layout {seo}>
    <Container>
        <TextCardSection>
            <h1>Interactive Neural Simulator</h1>
            <p>Explore and interact with 3D brain models while simulating neural activity in real-time.</p>
            
            <div class="feature-image">
                <Image
                    src="/pf1.gif"
                    alt="Interactive Neural Simulator"
                    width={600}
                    height={400}
                    loading="eager"
                    decoding="async"
                />
            </div>

            <h2>Key Features:</h2>
            <ul>
                <li>Realistic 3D brain models</li>
                <li>Real-time neural activity simulation</li>
                <li>Interactive exploration of brain regions</li>
                <li>Customizable parameters for in-depth study</li>
            </ul>

            <p>Whether you're a student, researcher, or enthusiast, our Interactive Neural Simulator provides an immersive experience to enhance your understanding of brain function and neural networks.</p>

            <div class="cta-container">
                <Button href="/demo/interactive-neural-simulator" customIcon>
                    Try Demo
                    <Icon name="ic:baseline-play-arrow" slot="icon" />
                </Button>
            </div>
        </TextCardSection>
    </Container>
</Layout>

<style>
    .feature-image {
        margin: 2rem 0;
        text-align: center;
    }
    .feature-image img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .cta-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }
    ul {
        margin-left: 1.5rem;
        margin-bottom: 1.5rem;
    }
    h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
    }
</style>
