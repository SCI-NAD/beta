---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import {
    AnnouncementBar,
    Button,
    CustomerQuoteSection,
    ThreeColumnTextSection,
    StickyTextImageSection,
    CtaCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
    title: 'Neural Playground | SCI-NAD',
    description: 'Explore complex brain functions through interactive neural simulations.',
};

---

<Layout {seo}>
    <AnnouncementBar
        text="Experience Interactive Neuroscience in our Neural Playground"
        href="/features/neural-playground"
        slot="announcement-bar"
    />
    
    <TextAndImageHero reversed>
        <Fragment slot="text-container">
            <h1 class="text-gradient">Neural Playground</h1>
            <p>Unravel neuroscience mysteries through our cutting-edge 3D neural simulations.</p>
        </Fragment>
        <Fragment slot="btns-container">
            <Button href="/features/neural-playground" customIcon>
                Dive In
                <Icon name="ic:baseline-chevron-right" slot="icon" />
            </Button>
        </Fragment>
        <Image
            slot="image-container"
            src="/assets/images/b.jpg"
            alt="Interactive Neural Simulation"
            width={500}
            height={500}
            loading="eager"
            decoding="async"
        />
    </TextAndImageHero>

    <CustomerQuoteSection
        quoteText="SCI-NAD's simulations revolutionize neuroscience learning, making complex brain functions accessible to all."
        customerName="Dr. Alice Huxley, Neuroscientist"
    />

    <ThreeColumnTextSection>
        <Fragment slot="column-1-body">
            <h2>Interactive Learning</h2>
            <p>Engage with real-time neural interactions, simplifying complex concepts.</p>
        </Fragment>
        <Button slot="column-1-cta" outlined>Explore</Button>
        
        <Fragment slot="column-2-body">
            <h2>Accessible Models</h2>
            <p>Intuitive designs for educators and enthusiasts, breaking down entry barriers.</p>
        </Fragment>
        <Button slot="column-2-cta" outlined>Discover</Button>
        
        <Fragment slot="column-3-body">
            <h2>Advanced Applications</h2>
            <p>Unlock new potentials in education and research through our simulations.</p>
        </Fragment>
        <Button slot="column-3-cta" outlined>Innovate</Button>
    </ThreeColumnTextSection>

    <StickyTextImageSection>
        <Fragment slot="text-container">
            <h2>Real-World Neuroscience Scenarios</h2>
            <p>
                From clinical neurology to cognitive science, enhance your understanding through practical applications.
            </p>
        </Fragment>
        <Image
            slot="image-container"
            src="/assets/images/features/detailed-neural-model.jpg"
            alt="Detailed Neural Model"
            width={400}
            height={300}
            loading="eager"
            decoding="async"
        />
    </StickyTextImageSection>

    <CtaCardSection
        background="var(--theme-surface-2)"
        color="var(--theme-on-surface-2)"
    >
        <h2>Join Our Neuroscience Innovation Community</h2>
        <p>
            Be part of the revolution reshaping brain research and understanding.
        </p>
        <Button href="/community/join" customIcon>
            Join Now
            <Icon name="ic:baseline-chevron-right" slot="icon" />
        </Button>
    </CtaCardSection>
</Layout>
