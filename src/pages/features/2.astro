---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import {
    AnnouncementBar,
    Button,
    TextCardSection,
    StickyTextImageSection,
    CtaCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
    title: 'Insight Annotations | SCI-NAD',
    description: 'Uncover deeper insights with advanced contextual annotations for complex neural data.',
};
---

<Layout {seo}>
    <AnnouncementBar
        text="Discover the Power of Contextual Annotations"
        href="/features/insight-annotations"
        slot="announcement-bar"
    />
    
    <TextAndImageHero>
        <Fragment slot="text-container">
            <h1 class="text-gradient">Insight Annotations</h1>
            <p>Unlock neural data's full potential with detailed annotations enhancing understanding and research accuracy.</p>
        </Fragment>
        <Fragment slot="btns-container">
            <Button href="/features/insight-annotations" customIcon>
                Explore Now
                <Icon name="ic:baseline-chevron-right" slot="icon" />
            </Button>
        </Fragment>
        <Image
            slot="image-container"
            src="/assets/images/features/annotations-detail.webp"
            alt="Enhanced Annotations Detail"
            width={600}
            height={400}
            loading="eager"
            decoding="async"
        />
    </TextAndImageHero>

    <TextCardSection>
        <h2>Dive Deeper into Data</h2>
        <p>Navigate complex datasets with our annotation tools, revealing crucial patterns and insights for innovative research.</p>
        <Button href="/data/insights" outlined>Learn More</Button>
    </TextCardSection>

    <StickyTextImageSection>
        <Fragment slot="text-container">
            <h2>Interactive Exploration</h2>
            <p>
                Interact with annotated datasets to visualize correlations and causations, enhancing your research experience.
            </p>
        </Fragment>
        <Image
            slot="image-container"
            src="/assets/images/features/interactive-annotations.webp"
            alt="Interactive Annotations Platform"
            width={500}
            height={300}
            loading="eager"
            decoding="async"
        />
    </StickyTextImageSection>

    <CtaCardSection
        background="var(--theme-surface-2)"
        color="var(--theme-on-surface-2)"
    >
        <h2>Join Our Growing Community</h2>
        <p>
            Connect with professionals using advanced annotations to push neuroscience research boundaries.
        </p>
        <Button href="/community/join" customIcon>
            Get Involved
            <Icon name="ic:baseline-chevron-right" slot="icon" />
        </Button>
    </CtaCardSection>
</Layout>