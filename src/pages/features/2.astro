---
import { Icon } from 'astro-icon/components';
import {
    AnnouncementBar,
    Button,
    CustomerQuoteSection,
    TextCardSection,
    StickyTextImageSection,
    CtaCardSection,
} from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import TextAndImageHero from '../../components/sections/heros/TextAndImageHero.astro';

const seo = {
    title: 'Insight Annotations | SCI-NAD',
    description: 'Uncover deeper insights with advanced contextual annotations that bring clarity to complex neural data.',
};
---

<AnnouncementBar
    text="Discover the Power of Contextual Annotations"
    href="/features/insight-annotations"
    slot="announcement-bar"
/>
<Layout {seo}>
    <TextAndImageHero>
        <div slot="text-container">
            <h1>Insight Annotations</h1>
            <p>Unlock the full potential of neural data with detailed annotations that enhance your understanding and research accuracy.</p>
        </div>
        <div slot="btns-container">
            <Button href="/features/insight-annotations" customIcon
                >Explore Now <Fragment slot="icon">
                    <Icon name="ic:baseline-chevron-right" />
                </Fragment></Button
            >
        </div>
        <picture slot="image-container">
            <img
                src="/assets/images/features/annotations-detail.jpg"
                alt="Enhanced Annotations Detail"
                id="home-hero-image"
            />
        </picture>
    </TextAndImageHero>


    <TextCardSection>
        <h2>Dive Deeper into Data</h2>
        <p>Our annotation tools help you navigate through complex datasets, providing context that highlights underlying patterns and insights crucial for innovative research.</p>
        <a href="/data/insights" class="button">Learn More</a>
    </TextCardSection>
    

    <StickyTextImageSection>
        <div slot="text-container">
            <h2>Interactive Exploration</h2>
            <p>
                Interact with annotated datasets to see direct correlations and causations, facilitating a more comprehensive learning and research experience.
            </p>
        </div>
        <picture slot="image-container">
            <img
                src="/assets/images/features/interactive-annotations.jpg"
                alt="Interactive Annotations Platform"
                loading="lazy"
            />
        </picture>
    </StickyTextImageSection>

    <CtaCardSection
        background="var(--theme-surface-2)"
        color="var(--theme-on-surface-2)"
    >
        <h2>Become a part of our growing community</h2>
        <p>
            Connect with a network of professionals and researchers using our advanced annotations to push the boundaries of neuroscience research.
        </p>
        <Button href="/community/join" customIcon
            >Get Involved<Fragment slot="icon">
                <Icon name="ic:baseline-chevron-right" />
            </Fragment></Button
        >
    </CtaCardSection>
</Layout>

    