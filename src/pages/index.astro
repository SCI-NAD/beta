---
import 'dotenv/config';
import { Container, FeatureCard } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
    <HomeHeroSection/>
    <Container>
        <section class="feature-card__section">
            <div class="feature-card__grid">
                <FeatureCard title="Interactive 3D Brain Mapping">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z"></path><path d="M3.6 9h16.8"></path><path d="M3.6 15h16.8"></path><path d="M12 3a9 9 0 0 1 9 9"></path><path d="M12 21a9 9 0 0 1-9-9"></path></svg>
                    Explore and interact with detailed 3D brain models. Place electrodes and target specific anatomical regions with our intuitive interface.
                </FeatureCard>
                <FeatureCard title="Gamified Learning Pathways">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
                    Advance from novice to expert through engaging, interactive neuroscience challenges and simulations.
                </FeatureCard>
                <FeatureCard title="FAIR Neural Data Integration">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 14.66V20a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h5.34"></path><polygon points="18 2 22 6 12 16 8 16 8 12 18 2"></polygon></svg>
                    Seamlessly load and analyze FAIR neural datasets for custom simulations and visualizations.
                </FeatureCard>
                <FeatureCard title="Real-time Neural Simulations">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12h20"></path><path d="M7 5l-5 7 5 7"></path><path d="M22 5l-5 7 5 7"></path></svg>
                    Run real-time simulations showing brain responses to various electrode placements using actual neural data.
                </FeatureCard>
                <FeatureCard title="Open Creator Marketplace">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
                    Share and access a wide range of user-generated brain-electrode montages, simulations, and custom tools.
                </FeatureCard>
                <FeatureCard title="Intelligent Knowledge Graphs">
                    <svg slot="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                    Visualize complex neuroscience concepts with machine learning-generated knowledge graphs and contextual annotations.
                </FeatureCard>
            </div>
        </section>
    </Container>
</Layout>

<style>
    .feature-card__section {
        margin: 3rem auto;
    }
    .feature-card__grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        justify-items: center;
    }
    @media (max-width: 768px) {
        .feature-card__grid {
            grid-template-columns: 1fr;
        }
    }
    :global(.feature-card svg) {
        width: 3rem;
        height: 3rem;
        margin-bottom: 1rem;
        color: var(--theme-primary);
    }
</style>
