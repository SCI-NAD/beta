---
// Import necessary UI components and layout
import { Container, FeatureCard } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
    <HomeHeroSection/>
    <Container>
        <section class="feature-card__section">
            <h2>Core Features</h2>
            <p>
                Discover the tools that revolutionize neuroscience research and learning.
            </p>
            <div class="feature-card__grid">
                <FeatureCard href="/platform/visualization" title="Hands-on Interaction and Simulations" imgSrc="/assets/images/home/visualize-icon.svg">
                    Intuitive and interactive brain mapping combined with real-time simulation of neural data.
                </FeatureCard>
                <FeatureCard href="/platform/data-analysis" title="Contextual Annotations" imgSrc="/assets/images/home/analyze-icon.svg">
                    Powerful insights from complex data, enhanced by reductionist breakdown and contextual annotations.
                </FeatureCard>
				<FeatureCard href="/platform/data-integration" title="Open Data Integration" imgSrc="/assets/images/home/data-integration-icon.svg">
                    Seamlessly access and apply open-source neural datasets to your research.
                </FeatureCard>
                
            </div>
        </section>
    </Container>
    
    
</Layout>

<style>
    .feature-card__section, .minimal-support-section {
        margin: 50px auto;
        text-align: center;
    }
    .feature-card__grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 50px;
        justify-items: center;
    }
    .start-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #0077cc;
        color: white;
        border-radius: 5px;
        text-decoration: none;
    }
    @media (max-width: 768px) {
        .feature-card__grid {
            grid-template-columns: 1fr;
        }
    }
</style>
