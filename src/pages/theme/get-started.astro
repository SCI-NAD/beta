---
import {Icon} from 'astro-icon/components';
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Join the Waitlist | SCI-NAD',
	description: 'Join our waitlist to get early access to new features and updates from SCI-NAD.',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>Join the SCI-NAD Waitlist</h1>
			<p>Sign up today to get early access to revolutionary neuroscience tools and research advancements.</p>
			<div class="cta-buttons__container">
        <Button
        href="https://sci-nad.org/register"
        outlined
        newTab
        customIcon
        >
        Register Now
        <Fragment slot="icon">
          <Icon name="ic:baseline-chevron-right" />
        </Fragment>
      </Button>
        <Button
					href="/updates/latest-features"
          customIcon
					>
          Learn About Features
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right" />
          </Fragment>
				</Button>
        <Button
					href="/updates/news"
          customIcon
					>
          Latest News
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right" />
          </Fragment>
				</Button>
			</div>
		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;  /* Adds a space between buttons */
	}
</style>
